var x,y,z,l: numerico
var r1,r2: numerico

inicio

	imprimir("Escriba el 1er numero:")
	leer(x)

	imprimir("Escriba el 2ndo numero:")
	leer(y)
	r1=y%x
	
	imprimir("Escriba el 3er numero:")
	leer(z)

	imprimir("Escriba el 4er numero:")
	leer(l)
	r2=l*z
	
	imprimir("El resultado es ",r1+r2)
	
fin